//Ordenação por seleção

#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define TAM 100

void ops(int vetor[], int n) {
    int i, j, indice, temp;

    for (i = 0; i < n - 1; i++) {
        indice = i;

        for (j = i + 1; j < n; j++) {
            if (vetor[j] < vetor[indice]) {
                indice = j;
            }
        }

        if (indice != i) {
            temp = vetor[i];
            vetor[i] = vetor[indice];
            vetor[indice] = temp;
        }
    }
}

void imprimir(int vetor[], int n) {
    for (int i = 0; i < n; i++) {
        printf("%d ", vetor[i]);
    }
    printf("\n");
}

int main() {
    int x, y;
    int vetor[TAM];

    srand(time(NULL));

    printf("Escreva o limite inicial e final do intervalo, respectivamente:\n");
    scanf("%d %d", &x, &y);

    for (int k = 0; k < TAM; k++) {
        vetor[k] = x + rand() % (y - x + 1);
    }

    printf("Vetor antes de ser ordenado:\n");
    imprimir(vetor, TAM);

    ops(vetor, TAM);

    printf("Após algoritmo de ordenação por seleção:\n");
    imprimir(vetor, TAM);

    return 0;
}
