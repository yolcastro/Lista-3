//Bubble sort

#include <stdio.h>
#include <stdlib.h> 
#include <time.h>

#define TAM 100

void bubble_sort(int vetor[], int n) {
    int k, j, temp;

    for (k = n - 1; k > 0; k--) {
        for (j = 0; j < k; j++) {
            if (vetor[j] > vetor[j + 1]) {
                temp = vetor[j];
                vetor[j] = vetor[j + 1];
                vetor[j + 1] = temp;
            }
        }
    }
}

void imprimir(int vetor[], int n) {
    for (int i = 0; i < n; i++) {
        printf("%d ", vetor[i]);
    }
    printf("\n");
}

int main() {
    int x, y;
    int vetor[TAM];

    srand(time(NULL));

    printf("Escreva o limite inicial e final do intervalo, respectivamente:\n");
    scanf("%d %d", &x, &y);

    for (int k = 0; k < TAM; k++) {
        vetor[k] = x + rand() % (y - x + 1);
    }

    printf("Elementos dos vetores antes de serem ordenados:\n");
    imprimir(vetor, TAM);

    bubble_sort(vetor, TAM);

    printf("ApÃ³s serem ordenados:\n");
    imprimir(vetor, TAM);

    return 0;
}
